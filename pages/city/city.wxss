/* city.wxss */

.city_head {
  display: flex;
  flex-direction: column;
  align-items: left;
  background-color: gainsboro;
  vertical-align: middle;
  width: 100%;
}

.location_view_class {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: gainsboro;
  vertical-align: middle;
  width: 100%;
}

.txt_ding {
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  padding-top: 10px;
  background-color: gainsboro;
}

.icon_class {
  margin: 5px;
  padding: 5px;
  vertical-align: middle;
}

.txt_btn_class {
  background-color: white;
  font-size: 13px;
  text-align: center;
  margin: 10px;
  padding: 5px;
  border-radius: 1rem;
  width: 25%;
}

.txt_btn_hot_class {
  background-color: white;
  font-size: 13px;
  text-align: center;
  border-radius: 1rem;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 20px;
  padding: 5px;
  width: 25%;
  vertical-align: middle;
}

.txt_btn_hot_class_grey {
  background-color: gainsboro;
  font-size: 13px;
  text-align: center;
  border-radius: 1rem;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 20px;
  padding: 5px;
  width: 25%;
}

.hot_city_class {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  column-count: 4;
  margin-right: 30px;
  background-color: gainsboro;
}

.city_list_class {
  display: flex;
  flex-direction: column;
  align-items: left;
  background-color: white;
  vertical-align: middle;
}

.txt {
  padding: 10px;
  font-size: 15px;
  width: 100%;
}

.divider_class {
  background-color: gainsboro;
  width: 100%;
  height: 1px;
}

.txt_index {
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  background-color: gainsboro;
}

.city_list_selector {
  position: absolute;
  width: 50rpx;
  height: auto;
  right: 0;
  font-size: 13px;
}

.city_list_selector view {
  height: 20px;
  color: blue;
  text-align: center;
}

.selector-name {
  text-align: center;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #000;
  width: 100px;
  height: 100px;
  font-size: 48px;
  background-color: rgba(0, 0, 0, 0.4);
  line-height: 100px;
}

/* shopDetail.wxss */

.bg_class {
  background-color: #eee;
  display: flex;
  flex-direction: column;
}

.item_class {
  background-color: white;
  margin-top: 20px;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-cestart;
  vertical-align: middle;
}

.item_txt_class {
  padding: 10px;
  margin: 5px;
  font-size: 15px;
  width: auto;
}

.address_class {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
}

.icon_loc_class {
  width: 23px;
  height: 23px;
  margin-right: 20px;
}

.divider_class {
  height: 1px;
  background-color: #eee;
}

.bottom_class {
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-around;
}

.divider_vertical_class {
  height: 40px;
  width: 1px;
  margin: 5px;
  background-color: #eee;
}
